<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RoomContractFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            app:icon="@drawable/icon_new_contract"
            android:text="Tạo mới hợp đồng"
            app:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            app:icon="@drawable/icon_view"
            android:text="Xem hợp đồng"
            app:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            android:text="Chỉnh sửa hợp đồng"
            app:icon="@drawable/icon_edit"
            app:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_print_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            android:text="In hợp đồng"
            app:icon="@drawable/icon_print"
            app:backgroundTint="@null"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            app:icon="@drawable/ic_delete"
            app:backgroundTint="@null"
            android:text="Xóa hợp đồng"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</FrameLayout>
