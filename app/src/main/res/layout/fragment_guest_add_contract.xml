<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".fragment.GuestAddContractFragment">

        <!-- Layout chứa form điền thông tin-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.02">

            <TextView
                android:id="@+id/txt_tong_thanh_vien"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="@string/tong_so_thanh_vien"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="120dp"
                android:layout_weight="1"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_tong_thanh_vien"
                app:layout_constraintStart_toEndOf="@id/txt_tong_thanh_vien">

                <AutoCompleteTextView
                    android:id="@+id/edt_total_members"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--            Tên khách-->
            <TextView
                android:id="@+id/txt_ten_khach"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="60dp"
                android:text="@string/ho_ten"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/txt_tong_thanh_vien"
                app:layout_constraintTop_toTopOf="@id/txt_tong_thanh_vien" />

            <!-- Dấu "*" -->
            <TextView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/sao"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_ten_khach"
                app:layout_constraintStart_toEndOf="@id/txt_ten_khach" />

            <!--            Khung điền tên-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_ten_khach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/txt_ten_khach"
                app:layout_constraintTop_toTopOf="@id/txt_ten_khach"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_ten_khach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_outline"
                    android:autofillHints=""
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_so_dien_thoai"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:text="@string/so_dien_thoai"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/til_ten_khach"
                app:layout_constraintTop_toTopOf="@id/til_ten_khach" />

            <!-- Dấu "*" -->
            <TextView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:autofillHints=""
                android:text="@string/sao"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_so_dien_thoai"
                app:layout_constraintStart_toEndOf="@id/txt_so_dien_thoai" />

            <!--            Khung điền số điện thoại-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_so_dien_thoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/txt_so_dien_thoai"
                app:layout_constraintTop_toTopOf="@id/txt_so_dien_thoai"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_so_dien_thoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_outline"
                    android:autofillHints=""
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Số CCCD/CMND -->
            <TextView
                android:id="@+id/txt_so_cmnd_cccd"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:text="@string/cccd_cmnd"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/til_so_dien_thoai"
                app:layout_constraintTop_toTopOf="@id/til_so_dien_thoai" />

            <!-- Dấu "*" -->
            <TextView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/sao"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_so_cmnd_cccd"
                app:layout_constraintStart_toEndOf="@id/txt_so_cmnd_cccd" />

            <!--            Khung điền tên-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_so_cccd_cmnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/txt_so_cmnd_cccd"
                app:layout_constraintTop_toTopOf="@id/txt_so_cmnd_cccd"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_so_cccd_cmnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_outline"
                    android:autofillHints=""
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- LinearLayout chứa trường Ngày sinh and Giới tính-->
            <LinearLayout
                android:id="@+id/layout_ngay_sinh_gioi_tinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/til_so_cccd_cmnd"
                app:layout_constraintTop_toTopOf="@id/til_so_cccd_cmnd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Ngày sinh -->
                    <TextView
                        style="@style/TEXT_MED_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="@string/ngay_sinh"
                        android:textSize="18sp" />

                    <!-- Giới tính -->
                    <TextView
                        style="@style/TEXT_MED_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gioi_tinh"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Khung điền ngày sinh -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_ngay_sinh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dd_mm_yyyy"
                            app:boxBackgroundMode="none">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_ngay_sinh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom_outline"
                                android:inputType="date" />

                        </com.google.android.material.textfield.TextInputLayout>

                            <ImageButton
                                android:id="@+id/img_button_calendar_ngay_sinh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_calendar"
                                android:layout_alignParentEnd="true"
                                android:background="@null"
                                android:layout_centerVertical="true"
                                android:padding="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>


                    <!-- Khung điền giới tính -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:id="@+id/til_gioi_tinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBaseline_toBaselineOf="@id/txt_tong_thanh_vien"
                        app:layout_constraintStart_toEndOf="@id/txt_tong_thanh_vien">

                        <AutoCompleteTextView
                            android:id="@+id/edt_gioi_tinh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:clickable="true"
                            android:focusable="false"
                            android:background="@drawable/bottom_outline"
                            android:popupElevation="6dp"
                            android:dropDownHeight="wrap_content"
                            android:dropDownWidth="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Ngày tạo -->
            <TextView
                android:id="@+id/txt_ngay_tao"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:layout_weight="1"
                android:text="@string/ngay_tao"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/layout_ngay_sinh_gioi_tinh"
                app:layout_constraintTop_toTopOf="@id/layout_ngay_sinh_gioi_tinh" />

            <!--            Khung điền ngày tạo-->
            <RelativeLayout
                android:id="@+id/layout_ngay_tao_hop_dong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@id/txt_ngay_tao"
                app:layout_constraintTop_toTopOf="@id/txt_ngay_tao">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ngay_tao_hop_dong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ngay_tao_hop_dong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_outline"
                        android:autofillHints=""
                        android:inputType="date" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/img_button_calendar_tao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calendar"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>
            </RelativeLayout>

            <!-- Giá phòng -->
            <TextView
                android:id="@+id/txt_gia_phong"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:text="@string/gia_phong"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/layout_ngay_tao_hop_dong"
                app:layout_constraintTop_toTopOf="@id/layout_ngay_tao_hop_dong" />

            <!-- Khung điền giá phòng-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gia_phong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_gia_phong"
                app:layout_constraintTop_toBottomOf="@id/txt_gia_phong"
                app:boxBackgroundMode="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_gia_phong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/bottom_outline"
                        android:inputType="number"
                        />

                    <TextView
                        android:id="@+id/txt_d_thang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/d_thang"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ngày hết hạn hợp đồng -->
            <TextView
                android:id="@+id/txt_ngay_het_han_hop_dong"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:text="@string/ngay_het_han_hop_dong"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/til_gia_phong"
                app:layout_constraintTop_toTopOf="@id/til_gia_phong" />

            <!-- Khung điền ngày hết hạn hợp đồng-->
            <RelativeLayout
                android:id="@+id/layout_ngay_het_han_hop_dong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@id/txt_ngay_het_han_hop_dong"
                app:layout_constraintTop_toTopOf="@id/txt_ngay_het_han_hop_dong">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ngay_het_han_hop_dong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ngay_het_han_hop_dong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_outline"
                        android:autofillHints=""
                        android:inputType="date" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/img_button_calendar_het_han"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calendar"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>
            </RelativeLayout>



            <TextView
                android:id="@+id/txt_ngay_tra_tien_phong"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:text="@string/ngay_tra_tien_phong"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/layout_ngay_het_han_hop_dong"
                app:layout_constraintTop_toTopOf="@id/layout_ngay_het_han_hop_dong" />


            <!-- Khung điền ngày trả tiền phòng-->
            <RelativeLayout
                android:id="@+id/layout_ngay_tra_tien_phong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@id/txt_ngay_tra_tien_phong"
                app:layout_constraintTop_toTopOf="@id/txt_ngay_tra_tien_phong">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ngay_tra_tien_phong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="none">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ngay_tra_tien_phong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_outline"
                        android:autofillHints=""
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/img_button_calendar_ngay_tra_tien_phong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calendar"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"/>
            </RelativeLayout>



            <!--Hạn thanh toán-->
            <LinearLayout
                android:id ="@+id/layout_han_thanh_toan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/layout_ngay_tra_tien_phong"
                app:layout_constraintTop_toTopOf="@id/layout_ngay_tra_tien_phong"
                android:layout_marginTop="70dp">

                <TextView
                    android:id="@+id/txt_han_thanh_toan"
                    style="@style/TEXT_MED_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/han_thanh_toan"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_han_thanh_toan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:inputType="number"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_ngay_han_thanh_toan"
                    style="@style/TEXT_MED_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:text="@string/ngay"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--Ảnh mặt trước CCCD-->
            <TextView
                android:id="@+id/txt_anh_mat_truoc_cccd"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/anh_mat_truoc_cccd"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_han_thanh_toan" />

            <!-- Khung điền ảnh mặt trước CCCD-->
            <FrameLayout
                android:id="@+id/layout_them_anh_cccd_truoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_anh_mat_truoc_cccd">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_cccd_front"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/img_add_cccd_front"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_back_add_image"
                    android:contentDescription="@string/khung_avatar"
                    android:padding="50dp"
                    android:src="@drawable/icon_add_image" />
            </FrameLayout>

            <!--Ảnh mặt sau CCCD-->
            <TextView
                android:id="@+id/txt_anh_mat_sau_cccd"
                style="@style/TEXT_MED_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/anh_mat_sau_cccd"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_them_anh_cccd_truoc" />

            <!-- Khung điền ảnh mặt sau CCCD-->
            <FrameLayout
                android:id="@+id/layout_them_anh_cccd_sau"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_anh_mat_sau_cccd">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_cccd_back"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/background_image"
                    android:scaleType="centerCrop"
                     />

                <ImageView
                    android:id="@+id/img_add_cccd_back"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_back_add_image"
                    android:contentDescription="@string/khung_avatar"
                    android:padding="50dp"
                    android:src="@drawable/icon_add_image" />
            </FrameLayout>

            <!-- LinearLayout chứa trường Hợp đồng-->
            <LinearLayout
                android:id="@+id/layout_anh_hop_dong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_them_anh_cccd_sau">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Mặt trước hợp đồng -->
                    <TextView
                        style="@style/TEXT_MED_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/mat_truoc_hop_dong"
                        android:textSize="18sp" />

                    <!-- Mặt sau hợp đồng -->
                    <TextView
                        style="@style/TEXT_MED_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/mat_sau_hop_dong"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Khung điền ảnh mặt trước hợp đồng-->
                    <FrameLayout
                        android:id="@+id/layout_them_anh_hop_dong_truoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_contract_front"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@drawable/background_add_image_rectangle"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/img_add_contract_front"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:background="@drawable/round_back_add_image"
                            android:contentDescription="@string/mat_truoc_hop_dong"
                            android:padding="50dp"
                            android:src="@drawable/icon_add" />
                    </FrameLayout>

                    <!-- Khung điền ảnh mặt sau hợp đồng-->
                    <FrameLayout
                        android:id="@+id/layout_them_anh_hop_dong_sau"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_contract_back"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@drawable/background_image"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/img_add_contract_back"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:background="@drawable/round_back_add_image"
                            android:contentDescription="@string/mat_truoc_hop_dong"
                            android:padding="50dp"
                            android:src="@drawable/icon_add" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!--  Guildline định vị nút theo chiều ngang -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- Guildline định vị nút theo chiều dọc -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="30dp" />

            <!-- Nút lưu -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_contract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/luu"
                style="@style/BUTTON"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/btn_cancel"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_anh_hop_dong"
                app:layout_constraintBottom_toTopOf="@id/guideline_bottom"/>

            <!-- Nút hủy -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp"
                android:text="@string/huy"
                style="@style/BUTTON_2"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_add_contract"
                app:layout_constraintTop_toBottomOf="@id/layout_anh_hop_dong"
                app:layout_constraintBottom_toTopOf="@id/guideline_bottom"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>