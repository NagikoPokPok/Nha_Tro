<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">


        <TextView
            android:id="@+id/txt_confirm_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có muốn hủy lưu hợp đồng này không?"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="@color/colorTextBlack"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btn_no_delete_contract"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="@string/khong"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/colorButton"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:background="@drawable/custom_button_cancel"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter_medium"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yes_delete_contract"
                android:layout_width="90dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:text="@string/co"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:background="@drawable/custom_button_clicked"
                app:backgroundTint="@color/colorButton"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>