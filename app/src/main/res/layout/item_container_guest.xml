<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:id="@+id/container_guest"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    style="@style/SCREEN_CARD_WHITE_2"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="0.75dp"
    >

    <FrameLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        style="@style/background_ordinal_number_home"
        android:layout_marginBottom="10dp">

        <!-- Ordinal number -->
        <TextView
            android:id="@+id/txt_ordinal_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            style="@style/TEXT_BOLD_3_2"
            android:visibility="visible"
            android:text="1"/>

        <!-- Star icon -->
        <ImageView
            android:id="@+id/img_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/icon_star"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp">

            <TextView
                android:id="@+id/txt_name_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                style="@style/TEXT_MED_2"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Trần Quang Hiếu"
                android:textSize="18sp" />

            <FrameLayout
                android:id="@+id/frm_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_margin="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_circle_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    style="@style/SCREEN_CARD_WHITE_2"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    style="@style/menu" />
            </FrameLayout>

            <!-- New Section: Người đại diện hợp đồng -->
            <LinearLayout
                android:id="@+id/layout_contract_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_guest"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/img_contract_owner"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/contract_owner"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/colorGreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người đại diện hợp đồng"
                    style="@style/TEXT_LIGHT_2"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/iv_check_box"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/MyCheckBoxStyle"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/frm_Image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_margin="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_image"
                    android:backgroundTint="@color/colorGray"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu" />

            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_phone_number_of_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Số điện thoại :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:text="0918300555"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_entry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Ngày vào ở :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_entry_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:text="25/03/2024"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_profile_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Tình trạng hồ sơ :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_profile_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="Chưa cập nhật đầy đủ"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
