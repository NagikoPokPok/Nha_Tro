<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RoomBillFragment">

    <RelativeLayout
        android:id="@+id/layout_main_of_room_bill"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_functions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <FrameLayout
                android:id="@+id/layout_delete_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/frame_round_delete_bill"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_delete_index_normal"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageButton
                    android:id="@+id/btn_delete_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_delete_outline"
                    android:backgroundTint="@color/colorGray" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_filter_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/frame_round_filter_bill"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_delete_index_normal"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageButton
                    android:id="@+id/btn_filter_bill"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_filter_index"
                    android:backgroundTint="@color/colorGray" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_date_time"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/background_date_time_index"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_calendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_calendar"
                    android:contentDescription="Calendar"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/txt_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textSize="15sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/colorTextBlack"/>

                <ImageView
                    android:id="@+id/btn_cancel_month_picker"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/ic_cancel"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_type_of_filter_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@id/layout_functions">

            <TextView
                android:id="@+id/txt_title_filter_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="Lọc theo:  "
                android:textSize="15sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/colorTextBlack"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/list_type_of_filter_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:orientation="horizontal">
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang tải dữ liệu..."
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_below="@id/layout_type_of_filter_bill"
            android:layout_above="@id/btn_add_bill"
            />

        <LinearLayout
            android:id="@+id/layout_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_below="@id/recycler_view"
            android:layout_above="@id/btn_add_bill">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/img_no_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="Không có thông tin !"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_delete_many_bills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/colorGray"
            app:strokeWidth="0.25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="start"
                    >

                    <CheckBox
                        android:id="@+id/checkbox_select_all"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/checkbox_selector_index"
                        android:button="@null"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn tất cả"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >

                    <ImageButton
                        android:id="@+id/txt_delete_bill_here"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_delete"
                        android:backgroundTint="@color/colorButton"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xoá"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="end"
                    >

                    <ImageButton
                        android:id="@+id/txt_cancel_delete_bill"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_cancel"
                        android:backgroundTint="@color/colorRed"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Huỷ xoá"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextBlack"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>






            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_bill"
            style="@style/BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:text="Thêm hoá đơn"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:icon="@drawable/icon_add"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
