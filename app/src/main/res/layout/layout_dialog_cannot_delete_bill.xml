<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_gravity="center">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <FrameLayout
            android:id="@+id/frm_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_Profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/redText"
                android:scaleType="fitXY"
                app:riv_oval="true" />

            <ImageView
                android:id="@+id/txt_add_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_add"
                android:rotation="45"
                android:backgroundTint="@color/white"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không thể xoá hoá đơn !"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_delete_home_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoá đơn này chưa được thanh toán \n Bạn chỉ có thể xoá khi hoá đơn được thanh toán!"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:textColor="@color/colorTextBlack"
            android:layout_gravity="center"
            android:gravity="center"/>


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Đóng"
            android:textColor="@color/colorButton"
            app:iconGravity="textStart"
            android:textSize="16sp"
            app:backgroundTint="@null"
            android:background="@drawable/custom_button_cancel"
            android:fontFamily="@font/inter_medium"/>

    </LinearLayout>

</LinearLayout>