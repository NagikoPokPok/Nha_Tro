<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_status_of_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoá đơn đã được thanh toán"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/colorGreen"
        android:textSize="16sp"
        android:layout_above="@id/layout_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_view_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/custom_button_add"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingTop="12dp"
            android:paddingEnd="9dp"
            android:paddingBottom="12dp"
            android:text="Hủy"
            android:textColor="@color/colorTextBlack"
            android:textSize="20sp"
            app:backgroundTint="@color/grey"
            app:icon="@drawable/icon_exit"
            app:iconGravity="textStart"
            app:iconPadding="3dp"
            app:iconSize="24dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/custom_button_add"
            android:gravity="center"
            android:paddingStart="9dp"
            android:paddingTop="12dp"
            android:paddingEnd="9dp"
            android:paddingBottom="12dp"
            android:text="Gửi tin nhắn"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_mail"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            android:visibility="visible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mark_bill_is_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_mark_bill_is_paid"
            android:gravity="center"
            android:paddingStart="9dp"
            android:paddingTop="12dp"
            android:paddingEnd="9dp"
            android:paddingBottom="12dp"
            android:text="Xác nhận thanh toán"
            android:textColor="@color/colorGreen"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_tick"
            app:iconTint="@color/colorGreen"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/frame_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_status_of_bill"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="Hóa đơn"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="end"
                        android:text="Tháng "
                        android:textColor="@color/colorTextBlack"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_month_year_of_bill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="start"
                        android:text="1/2024"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/khung"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:text="Ngày lập hóa đơn"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/txt_date_make_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter_light"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="02/08/2024"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/khung"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:text="Hạn cuối thanh toán"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/txt_date_due_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter_light"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="02/08/2024"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:background="@color/black" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tiền thuê phòng"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/txt_price_of_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_light"
                        android:text="2.000.000 VND"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Số ngày ở"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:id="@+id/number_of_days_lived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_light"
                        android:text="30 days"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Thành tiền"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:id="@+id/txt_total_money_of_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="2.000.000 VNĐ"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp"
                        />



                </LinearLayout>




            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:padding="10dp"
                    android:text="Tiền dịch vụ"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="17dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/roomServiceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/khung"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="end"
                    android:text="Thành tiền"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_total_money_of_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="end"
                    android:text="500.000 VNĐ"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/layout_money_plus_or_minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/plusRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="end"
                    android:text="Tổng tiền cộng: "
                    android:visibility="gone"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/minusRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                <TextView
                    android:id="@+id/txt_total_plus_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="end"
                    android:text="Tổng tiền trừ: "
                    android:visibility="gone"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_gravity="end|bottom">

                    <TextView
                        android:id="@+id/txt_total_minus_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Thành tiền"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>


                    <TextView
                        android:id="@+id/txt_total_money_of_add_or_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="2.000.000 VNĐ"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp"
                        />



                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="end"
                    android:text="Tổng cộng"
                    android:textColor="@color/colorButton"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_total_money_of_bill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="end"
                    android:text="1.500.000 VNĐ"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="19sp" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>




</RelativeLayout>