<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    style="@style/SCREEN_CARD_WHITE_2"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="0.75dp">

    <TextView
        android:id="@+id/txt_ordinal_number"
        android:layout_width="55dp"
        android:layout_height="55dp"
        style="@style/background_ordinal_number_home"
        android:gravity="center"
        android:text="1"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp">

            <TextView
                android:id="@+id/txt_name_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TEXT_BOLD_2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="P103"
                android:textSize="18sp" />

            <FrameLayout
                android:id="@+id/frm_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_margin="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_circle_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    style="@style/SCREEN_CARD_WHITE_2"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    style="@style/menu" />

            </FrameLayout>


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/iv_check_box"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/MyCheckBoxStyle"
                android:visibility="gone" />


            <FrameLayout
                android:id="@+id/frm_Image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_margin="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_image"
                    android:backgroundTint="@color/colorGray"
                    android:scaleType="fitXY"
                    app:riv_oval="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu" />

            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_nameOfGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ho_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Họ tên :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edt_ho_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_MED_2"
                android:text="Ho Quang Hieu"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_phone_number_of_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_so_dien_thoai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Số điện thoại :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edt_so_dien_thoai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                style="@style/TEXT_LIGHT_2"
                android:text="0918300555"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_trang_thai_thanh_toan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Trạng thái :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edt_trang_thai_thanh_toan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_MED_2"
                android:text="Đã thanh toán"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_number_of_guests_are_living"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_so_nguoi_dang_o"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Số người đang ở :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edt_so_nguoi_dang_o"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:text="2"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_price_of_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:ellipsize="end"
                style="@style/TEXT_LIGHT_2"
                android:maxLines="1"
                android:text="Giá thuê :"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/TEXT_LIGHT_2"
                android:text="1.500.000"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:id="@+id/line_of_item_room"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorGray" />


        <TextView
            android:id="@+id/txt_describe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="3"
            style="@style/TEXT_MED_2"
            android:maxLines="3"
            android:text="View Biển"
            android:textSize="15sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/background_ordinal_number_home"
            android:text="+  Tạo hợp đồng"
            android:textSize="15sp"
            app:backgroundTint="@null"
            />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>