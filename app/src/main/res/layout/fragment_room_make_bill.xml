<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RoomBillFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="72dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/linear_background_bill">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Lập hóa đơn"
                        android:gravity="center"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_month_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tháng 7, 2024"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorButton"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/black" />
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/linear_background_bill"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày lập hóa đơn"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="17sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            />
                        <TextView
                            android:id="@+id/txt_create_bill_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02/08/2024"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="17sp"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_marginTop="-60dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical"
                        android:background="@drawable/linear_background_bill"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hạn đóng tiền"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="17sp"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            />
                        <TextView
                            android:id="@+id/txt_pay_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02/08/2024"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="17dp"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/linear_background_bill">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:id="@+id/txt_ordinal_number"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/hastag_bill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:visibility="visible"
                            android:text="#"
                            android:fontFamily="@font/inter_bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiền thuê phòng"
                            android:textSize="20dp"
                            android:layout_gravity="end"
                            android:fontFamily="@font/inter_bold"
                            android:layout_marginStart="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày bắt đầu:"
                            android:textSize="17dp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginStart="30dp"
                            />
                        <TextView
                            android:id="@+id/txt_date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/08/2024"
                            android:textSize="17dp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginStart="30dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tính tới ngày: "
                            android:textSize="17dp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginStart="30dp"
                            />
                        <TextView
                            android:id="@+id/txt_date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/08/2024"
                            android:textSize="17dp"
                            android:fontFamily="@font/inter_medium"
                            android:layout_marginStart="30dp"
                            />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linear_background_bill"
                        >
                        <TextView
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/greenText"
                            android:background="@drawable/hastag_bill"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="-80dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/txt_month_hire"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1 tháng,"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"
                                android:layout_marginStart="0dp"
                                />
                            <TextView
                                android:id="@+id/txt_day_hire"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=" 0 ngày"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"

                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Thành tiền"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"
                                android:layout_gravity="left"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="-40dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/txt_room_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:text="x1.500.000"
                                android:textSize="20dp"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/inter_medium"
                                android:layout_marginStart="0dp"
                                />

                            <TextView
                                android:id="@+id/txt_into_room_money"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="1.500.000"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:fontFamily="@font/inter_bold"
                                />
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:text="đ"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/inter_bold"
                                />
                        </LinearLayout>

                    </LinearLayout>





                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/linear_background_bill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp">
                        <TextView

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/hastag_bill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:visibility="visible"
                            android:text="#"
                            android:fontFamily="@font/inter_bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="0dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phí dịch vụ"
                                android:textSize="20dp"
                                android:layout_gravity="end"
                                android:fontFamily="@font/inter_bold"
                                android:layout_marginStart="10dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/ic_edit"

                                />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/goi_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="-10dp"
                        android:text="Chỉnh sửa mức khách sử dụng \n để tính phí dịch vụ"
                        android:fontFamily="@font/inter_light"
                        android:textSize="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/serviceInBillRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/linear_background_bill"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:id="@+id/thanh_tien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linear_background_bill"
                        >
                        <TextView
                            android:layout_width="7dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/greenText"
                            android:background="@drawable/hastag_bill"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="-80dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Tiền dịch vụ"
                                android:gravity="start"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"

                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Thành tiền"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"
                                android:layout_gravity="left"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="-40dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:text="Tổng tiền dịch vụ"
                                android:textSize="17dp"
                                android:fontFamily="@font/inter_medium"
                                android:layout_marginStart="0dp"
                                />

                            <TextView
                                android:id="@+id/txt_total_service_fee"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="500.000"
                                android:gravity="right"
                                android:textSize="20dp"
                                android:fontFamily="@font/inter_bold"
                                />
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:text="đ"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/inter_bold"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/linear_background_bill">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/hastag_bill"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:visibility="visible"
                            android:text="#"
                            android:fontFamily="@font/inter_bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cộng thêm/ Giảm bớt"
                            android:textSize="20dp"
                            android:layout_gravity="end"
                            android:fontFamily="@font/inter_bold"
                            android:layout_marginStart="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/khung"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="10dp">
                            <CheckBox
                                android:id="@+id/btn_plus_money"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/checkbox_selector_index"
                                android:button="@null"
                                android:visibility="visible" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cộng thêm"
                                android:layout_marginStart="10dp"
                                android:textSize="20sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/khung"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal"
                            >
                            <CheckBox
                                android:id="@+id/btn_minus_money"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/checkbox_selector_index"
                                android:button="@null"
                                android:visibility="visible" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giảm bớt"
                                android:layout_marginStart="10dp"
                                android:textSize="20sp"
                                />
                        </LinearLayout>



                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/plusOrMinusRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



                    <TextView
                        android:id="@+id/txt_null_plus_or_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiện chưa có khoản thêm/bớt nào"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:visibility="visible"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="6dp"
                    android:background="@drawable/linear_background_bill">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:layout_marginEnd="3dp"
                        android:gravity="end"
                        android:fontFamily="@font/inter_bold"
                        android:text="Tổng cộng:"/>
                    <TextView
                        android:id="@+id/txt_total_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:fontFamily="@font/inter_bold"
                        android:text="1.500.000"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:text="đ"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/inter_bold"
                        />

                </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-66dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_make_bill"
                android:background="@drawable/custom_button_add"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/grey"
                android:layout_marginEnd="6dp"
                app:icon="@drawable/icon_exit"
                app:iconGravity="textStart"
                app:iconTint="@color/black"
                android:paddingStart="0dp"
                app:iconPadding="3dp"
                android:paddingEnd="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:iconSize="24dp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_make_bill"
                android:background="@drawable/custom_button_add"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Lập hóa đơn"
                android:textSize="20sp"
                app:backgroundTint="@null"
                app:icon="@drawable/icon_add"
                app:iconGravity="textStart"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:iconSize="24dp"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>