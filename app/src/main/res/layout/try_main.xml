<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Tạo mới Nhà trọ"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/bg_yellow_corner_16_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_name_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên nhà trọ"
            android:fontFamily="@font/inter_light"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/edt_name_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_white_corner_16_border_gray"
            android:hint="Ví dụ: Nhà trọ MyHome"
            android:imeOptions="actionNext"
            android:padding="12dp" />

        <TextView
            android:id="@+id/txt_address_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/bg_white_corner_16_border_gray"
            android:layout_marginTop="7dp"
            android:hint="Ví dụ: 254 Nguyễn Văn Linh"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Huỷ"
                android:textColor="@color/colorButton"
                app:iconGravity="textStart"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:background="@drawable/custom_button_cancel"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/inter_medium"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_home"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:text="Tạo"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                app:backgroundTint="@color/colorButton"
                app:icon = "@drawable/ic_add" />

        </LinearLayout>






    </LinearLayout>

</LinearLayout>