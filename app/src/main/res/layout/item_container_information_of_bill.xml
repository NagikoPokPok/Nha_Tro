<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/white"
    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/black"
    app:strokeWidth="0.75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_item_bill_month"
                >

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/inter_bold"
                    android:paddingStart="22dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="22dp"
                    android:paddingBottom="7dp"
                    android:text="T.71"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/year"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_item_bill_year"
                    android:fontFamily="@font/inter_bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="7dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="7dp"
                    android:text="2024"
                    android:textColor="@color/colorButton"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingEnd="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_date_time_for_bill"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_create_bill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_light"
                            android:text="15/07/2024"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1dp"
                            android:background="@color/colorTextBlack"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/date_pay_bill"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_light"
                            android:text="15/07/2024"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>



                    <FrameLayout
                        android:id="@+id/frm_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:gravity="end">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_circle_menu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/background_image"
                            android:backgroundTint="@color/white"
                            android:scaleType="fitXY"
                            app:riv_oval="true" />

                        <ImageView
                            android:id="@+id/img_menu"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu" />

                    </FrameLayout>

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/checkbox_selector_index"
                        android:button="@null"
                        android:visibility="gone"
                       />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_status_of_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_status_of_pay"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/checkbox_unchecked_index"
                            android:backgroundTint="@color/colorGreen" />

                        <TextView
                            android:id="@+id/txt_status_of_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Đã thanh toán"
                            android:textColor="@color/colorTextBlack" />
                    </LinearLayout>


<!--                    <LinearLayout-->
<!--                        android:id="@+id/layout_status_of_give_bill"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="end"-->
<!--                        android:orientation="horizontal">-->

<!--                        <ImageView-->
<!--                            android:id="@+id/img_status_of_give_bill"-->
<!--                            android:layout_width="10dp"-->
<!--                            android:layout_height="10dp"-->
<!--                            android:layout_gravity="center_vertical"-->
