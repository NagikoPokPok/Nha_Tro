<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_corner_16"
    android:elevation="10dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_margin="30dp">


    <TextView
        android:id="@+id/txt_title_dialog"
        style="@style/TEXT_MED_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_yellow_corner_16_top"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/Sap_xep"
        android:textSize="20sp" />


    <RadioGroup
        android:id="@+id/radio_group_sort_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RadioButton
            android:id="@+id/radio_btn_number_room_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng phòng tăng dần"
            android:textSize="17sp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/inter_light"
            android:theme="@style/RadioButtonStyle"/>

        <RadioButton
            android:id="@+id/radio_btn_number_room_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng phòng giảm dần"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/inter_light"
            android:theme="@style/RadioButtonStyle"/>

        <RadioButton
            android:id="@+id/radio_btn_revenue_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doanh thu tháng tăng dần"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/inter_light"
            android:theme="@style/RadioButtonStyle"/>

        <RadioButton
            android:id="@+id/radio_btn_revenue_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doanh thu tháng giảm dần"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/inter_light"
            android:theme="@style/RadioButtonStyle"
            />
    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"

        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_cancel"
            style="@style/TEXT_MED_4"
            android:text="@string/huy"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/custom_button_clicked"
            style="@style/TEXT_MED_3"
            android:text="@string/ap_dung"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:iconGravity="textStart" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-70dp"
            android:visibility="invisible" />

    </LinearLayout>


</LinearLayout>