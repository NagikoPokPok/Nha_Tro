<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/bg_white_corner_16"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_delete_and_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_delete_service"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_delete"
            android:gravity="center"
            android:visibility="visible"
            app:backgroundTint="@color/colorTextBlack" />

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/icon_exit"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_service"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/image_water" />

            <TextView
                android:id="@+id/txt_serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:text="Điện"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Thu phí dụa trên"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_asterisk" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_feeBased"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner_backgroud"
                android:spinnerMode="dropdown" />


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#756B68"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Đơn vị tính"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_asterisk" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext"

                    android:cursorVisible="false"
                    android:focusable="false"
                    android:imeOptions="actionNext"

                    android:inputType="none"
                    android:padding="9dp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#756B68"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_fee_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Mức phí theo phòng"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_asterisk" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:suffixText="đ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/custom_edittext"
                    android:imeOptions="actionNext"
                    android:padding="9dp"
                    android:text="0"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#756B68"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:text="Ghi chú"
                android:textSize="18dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/custom_edittext"
                android:hint="Viết những lưu ý của bạn ta đây"
                android:imeOptions="actionNext"
                android:maxLines="6"
                android:minLines="3"
                android:padding="9dp"
                android:textColorHint="@color/colorGray" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#756B68"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_title_apply_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:text="Áp dụng cho"
                android:textSize="18dp" />

            <edu.poly.nhtr.Class.CustomRecyclerView
                android:id="@+id/recycler_apllyFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

            <LinearLayout
                android:id="@+id/layout_add_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Huỷ"
                    android:textColor="@color/colorButton"
                    app:iconGravity="textStart"
                    android:textSize="16sp"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_button_cancel"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/inter_medium"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_apply_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Áp dụng"
                        app:iconGravity="textStart"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_medium"
                        android:background="@drawable/custom_button_add"
                        app:backgroundTint="@null"
                        />

                    <ProgressBar
                        android:id="@+id/progress_bar_of_apply"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:visibility="gone"/>


                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_main_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <FrameLayout
                    android:id="@+id/frm_use_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_use_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        android:fontFamily="@font/inter_medium"
                        android:text="Áp dụng"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:backgroundTint="@color/colorButton"
                        app:iconGravity="textStart" />


                    <ProgressBar
                        android:id="@+id/progress_bar_of_use"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>


                <FrameLayout
                    android:id="@+id/frm_unused_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/btn_unused_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        android:fontFamily="@font/inter_medium"
                        android:text="Bỏ sử dụng"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:backgroundTint="@color/colorButton"
                        app:iconGravity="textStart" />


                    <ProgressBar
                        android:id="@+id/progress_bar_of_unused"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frm_update_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_update_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:background="@drawable/custom_button"
                        android:fontFamily="@font/inter_medium"
                        android:text="Cập nhật"
                        android:textSize="16sp"
                        app:backgroundTint="@null"
                        app:iconGravity="textStart" />

                    <ProgressBar
                        android:id="@+id/progress_bar_of_update"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>