<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NhàTrọ" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- Dark mode -->

    <style name="New.Theme.NhàTrọ" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default day theme drawable for ShapeableImageView -->
        <item name="android:src">@drawable/backgroundtop_night</item>
    </style>

    <!-- Screen background -->
    <style name="SCREEN">
        <item name="android:background">#252C4B</item>
    </style>

    <!-- Screen trắng -->
    <style name="SCREEN_WHITE">
        <item name="android:background">#252C4B</item>
    </style>

    <!-- Màu card -->
    <style name="SCREEN_CARD_WHITE_2">
        <item name="android:background">#333333</item>
        <item name="android:backgroundTint">#2D3A50</item>
    </style>

    <!--    Màu đường viền-->
    <color name="stroke_color">@color/white</color>

    <!-- Text background -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Button background -->
    <style name="BUTTON">
        <item name="android:background">@drawable/pressed_button_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <!-- Button background -->
    <style name="BUTTON_2">
        <item name="android:background">@drawable/pressed_button_night_white</item>
        <item name="android:textColor">@color/night_mode</item>
        <item name="iconTint">@color/night_mode</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:background">@drawable/tab_background_night</item>
        <item name="tabBackground">@drawable/tab_back_ground_selector_night</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <!-- Định nghĩa style cho văn bản của tab -->
    <style name="CustomTabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BUTTON_NO_BORDER">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="iconSearch">
        <item name="endIconDrawable">@drawable/ic_search_night</item>
        <item name="endIconTint">@color/night_mode</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="BACKGROUND_BUTTON">
        <item name="android:background">@drawable/round_back_night</item>
    </style>

    <style name="BACKGROUND_BUTTON_2">
        <item name="android:background">@drawable/round_back_night</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageViewLocation">
