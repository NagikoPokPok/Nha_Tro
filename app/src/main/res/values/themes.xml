<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NhàTrọ" parent="Theme.Material3.DayNight.NoActionBar">
<!--        <item name="android:src">@drawable/backgroundtop</item>-->
    </style>

    <style name="Theme.NhàTrọ" parent="Base.Theme.NhàTrọ" />


    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="SpecificCornerCut">
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>



    <!-- Light mode -->
    <style name="New.Theme.NhàTrọ" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default day theme drawable for ShapeableImageView -->
        <item name="android:src">@drawable/backgroundtop</item>
    </style>

    <!-- Screen xanh nhạt -->
    <style name="SCREEN">
        <item name="android:background">#C4E2FD</item>
    </style>

    <!-- Screen trắng -->
    <style name="SCREEN_WHITE">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Dành cho chữ xanh -->
    <style name="TEXT">
        <item name="android:textColor">@color/textSetting</item>
    </style>

    <!-- Button background -->
    <style name="BUTTON">
        <item name="android:background">@drawable/pressed_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BUTTON_NO_BORDER">
        <item name="android:tint">@color/textSetting</item>
    </style>

    <style name="BACKGROUND_BUTTON">
        <item name="android:background">@drawable/round_back_white</item>
    </style>

    <style name="BOTTOM_BAR">
        <item name="android:background">@color/big_fragment</item>
        <item name="itemTextColor">@color/custom_color</item>
        <item name="itemIconTint">@color/custom_color</item>
    </style>

<!--    Dành cho chữ đen-->
    <style name="TEXT_2">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Dành cho chữ trắng-->
    <style name="TEXT_3">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--    Theme cho chế độ ngày/đêm-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99535353</item>
    </style>


    <!--    Theme cho thông báo-->
    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99000000</item>
    </style>
</resources>