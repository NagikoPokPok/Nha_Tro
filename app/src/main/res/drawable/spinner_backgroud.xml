<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Border -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#585858" /> <!-- Viền -->
            <corners android:radius="16dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <item android:drawable="@drawable/spinner_dropdown_icon" android:width="25dp" android:height="25dp" android:gravity="right|center" android:right="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>