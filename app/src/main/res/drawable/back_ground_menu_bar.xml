<!-- res/drawable/bottom_navigation_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGray" />
            <corners android:radius="0dp" /> <!-- Điều chỉnh bán kính góc cong tùy theo nhu cầu -->
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:bottom="2dp"> <!-- Điều chỉnh độ cao của viền nhô lên -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="0dp" /> <!-- Điều chỉnh bán kính góc cong tùy theo nhu cầu -->
        </shape>
    </item>
</layer-list>
